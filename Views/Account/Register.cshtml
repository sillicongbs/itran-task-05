@{
    ViewData["Title"] = "Register";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container py-4">
    <h1 class="h4 mb-3">Register</h1>

    @if (TempData["Danger"] is string err)
    {
        <div class="alert alert-danger">@err</div>
    }
    @if (TempData["Success"] is string msg)
    {
        <div class="alert alert-success">@msg</div>
    }

    <form method="post" class="vstack gap-3">
        <div>
            <label class="form-label">Name</label>
            <input name="name" class="form-control" />
        </div>
        <div>
            <label class="form-label">Email</label>
            <input name="email" class="form-control" />
        </div>
        <div>
            <label class="form-label">Password</label>
            <input name="password" type="password" class="form-control" />
            <div class="form-text">Any non-empty password is accepted.</div>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-primary">Register</button>
            <a class="btn btn-link" href="/Account/Login">Back to login</a>
        </div>
    </form>
</div>
