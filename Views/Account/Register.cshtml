@{
    ViewData["Title"] = "Register";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container py-4">

    @if (TempData["Danger"] is string err)
    {
        <div class="alert alert-danger">@err</div>
    }
    @if (TempData["Success"] is string msg)
    {
        <div class="alert alert-success">@msg</div>
    }
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex align-items-center justify-content-center h-100">
                <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                    <form method="post" asp-action="Register">
                        <!-- Name input -->
                        <div data-mdb-input-init class="form-outline">
                            <label class="form-label" for="form1Example13">Full Name</label>
                            <input type="text" id="form1Example3" name="name" class="form-control form-control-lg" />
                        </div>
                        <!-- Email input -->
                        <div data-mdb-input-init class="form-outline">
                            <label class="form-label" for="form1Example11">Email address</label>
                            <input type="email" id="form1Example11" name="email" class="form-control form-control-lg" />
                           
                        </div>
                        <!-- Password input -->
                        <div data-mdb-input-init class="form-outline mb-2">
                            <label class="form-label" for="form1Example23">Password</label>
                            <input type="password" id="form1Example23" name="password" class="form-control form-control-lg" />
                           
                        </div>
                        <!-- Password input -->
                        <div data-mdb-input-init class="form-outline mb-2">
                            <label class="form-label" for="form1Example22">Phone</label>
                            <input type="tel" id="form1Example22" name="phone" class="form-control form-control-lg" />

                        </div>
                        <div class="mb-3">
                            <label for="exampleFormControlTextarea1" class="form-label">Address</label>
                            <textarea class="form-control" name="address" id="exampleFormControlTextarea1" rows="3"></textarea>
                        </div>
                        <div class="d-flex gap-2">
                            <button class="btn btn-primary">Register</button>
                            <a class="btn btn-link" href="/Account/Login">Back to login</a>
                        </div>
                    </form>
                </div>
                <div class="col-md-8 col-lg-7 col-xl-6">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                         class="img-fluid" alt="Phone image">
                </div>
            </div>
        </div>
    </section>
