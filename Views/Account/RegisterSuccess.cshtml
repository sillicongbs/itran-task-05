@{
    ViewData["Title"] = "Registration Successful";
    var email = (ViewBag.Email as string) ?? "";
    var token = (ViewBag.Token as Guid?) ?? Guid.Empty;
    var showDirect = (bool)(ViewBag.ShowDirectConfirmLink ?? false);

    // Build an absolute confirm URL using the app base (for display) or a relative for the href:
    string relativeConfirmUrl = $"/Account/ConfirmEmail?email={Uri.EscapeDataString(email)}&token={token}";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Check your e-mail</h5>
                </div>
                <div class="card-body">
                    <p class="mb-3">
                        We’ve sent a confirmation link to
                        @if (!string.IsNullOrWhiteSpace(email))
                        {
                            <strong>@email</strong>
                        }
                        else
                        {

                            <strong>your e-mail</strong>
                        }
.
                        Click the link in your inbox to activate your account.
                    </p>

                    @* DEV-ONLY convenience: show the same link here *@
                    @if (showDirect && !string.IsNullOrWhiteSpace(email) && token != Guid.Empty)
                    {
                        <div class="alert alert-warning">
                            <strong>Developer shortcut:</strong> confirm without opening the email.
                        </div>
                        <a class="btn btn-warning" href="@relativeConfirmUrl">Confirm now</a>
                    }

                    <a class="btn btn-link" href="/Account/Login">Go to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
