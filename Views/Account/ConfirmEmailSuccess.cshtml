@{
    ViewData["Title"] = "Email Confirmed";
    var email = ViewBag.Email as string;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-success">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Email confirmed</h5>
                </div>
                <div class="card-body">
                    <p class="mb-3">
                        @if (!string.IsNullOrWhiteSpace(email))
                        {
                            <text>Your e-mail <strong>@email</strong> has been confirmed successfully.</text>
                        }
                        else
                        {
                            <text>Your e-mail has been confirmed successfully.</text>
                        }
                    </p>
                    <a class="btn btn-primary" href="/Account/Login">Go to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
